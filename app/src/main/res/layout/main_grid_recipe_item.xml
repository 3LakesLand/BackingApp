<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/margin_fl"
    android:layout_marginTop="@dimen/margin_fl"
    android:layout_marginEnd="@dimen/margin_fl"
    android:layout_marginBottom="@dimen/margin_fl"
    android:layout_width="@dimen/image_width"
    android:layout_height="@dimen/image_height"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cake_iv"
        tools:src="@drawable/baseline_cake_black_48"/>
    <!--ProgressBar
        android:id="@+id/loading_indicator"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/progress_bar_width"
        android:layout_height="@dimen/progress_bar_height"/-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_tv"
        tools:text="@string/recipe"
        android:textSize="@dimen/no_image_found_tv_text_size"/>

</LinearLayout>